{{!
    @template local_catquiz
    Template which defines a entities view page.
    Classes required for JS:
    * none
    Data attributes required for JS:
    * none
    Context variables required for this template:
    Example context (json):
    {
        "id": 3,
        "parentid": 1,
        "description": "xyz",
        "name": "Mathematics3",
        "subscribed" : true,
        "viewlink":"http://localhost:8000/local/catquiz/manage_catscales.php?id=3#lcq_questions"
    }
}}
<table class="table" id="local-catscales-container-shortcodes-table-{{id}}">
    <thead class="thead-dark">
        <tr>
            <th scope="col">{{#str}}catscale, local_catquiz{{/str}}</th>
            <th scope="col">{{#str}}id, local_catquiz{{/str}}</th>
            <th scope="col">{{#str}}description, core{{/str}}</th>
        </tr>
    </thead>
    <tbody>
        {{#itemtree}}
            <tr>
                {{^ischild}}
                    <th scope="row">{{name}}</td>
                {{/ischild}}
                {{#ischild}}
                    <td style="padding-left: {{padding}}px">{{name}}</td>
                {{/ischild}}
                <td>{{id}}</td>
                <td>{{description}}</td>
            </tr>
        {{/itemtree}}
    </tbody>
</table>

