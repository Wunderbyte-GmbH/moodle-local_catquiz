{{!
    @template local_catquiz
    Template which defines a entities view page.
    Classes required for JS:
    * none
    Data attributes required for JS:
    * none
    Context variables required for this template:
    Example context (json):
    {
        "id": 3,
        "parentid": 1,
        "description": "xyz",
        "name": "Mathematics3",
        "subscribed" : true,
        "viewlink":"http://localhost:8000/local/catquiz/manage_catscales.php?id=3#lcq_questions"
    }
}}
{{#itemtree}}
<div id="local-catscales-container-shortcodes-{{id}}">
    <ul class="list-group w-100 mt-2">
        <li class="list-group-item" data-id="{{id}}" data-description="{{description}}" data-parentid="{{parentid}}" data-name="{{name}}"
        data-scaleid="{{id}}">
            <div class="h4"> {{name}}</div>
            <div class="h6">ID: {{id}}</div>
            <div>{{description}}</div>
        </li>
    </ul>
</div>
{{#children}}
    {{>local_catquiz/catscaleshortcodechildren}}
{{/children}}
{{/itemtree}}
