            {{> local_catquiz/catscalemanagers}}
        </div>
    </div>
    <div class="card">
        <div class="card-header">
            add Category
        </div>
        <div class="card-body">
            <a class="btn btn-primary" href="#"><i class="fa fa-plus px-2" aria-hidden="true"></i>Add catscale</a>
