{{#testitemdetails}}
    {{#backtotablelink}}
        <button id="backtotablelink" class='btn {{class}}' type={{type}}>{{label}}</button>
    {{/backtotablelink}}
    <div id="detailview">
        {{>local_catquiz/catmanager/questiondetailscard}}
    </div>
    <div>
        <div id="models">
        {{>local_catquiz/tabs/tab_models}}
        </div>
    </div>
    <div id="statistics">
        {{>local_catquiz/tabs/tab_testitemstats}}
    </div>
{{/testitemdetails}}

{{#js}}
    require(['local_catquiz/testitemdashboard/backbutton'], function(init) {
        init.init();
    });
    require(['local_catquiz/testitemdashboard/togglestatus'], function(init) {
        init.init({{testitemid}}, {{scaleid}}, {{contextid}}, '{{component}}');
    });
{{/js}}