{{!
    @template local_catquiz
    Template which defines a catquiz view page.
    Classes required for JS:
    * none
    Data attributes required for JS:
    * none
    Context variables required for this template:
    Example context (json):
    {
        "detailview": {
          "title": "Quiz Details",
          "body": {
            "id": "12345",
            "type": "Practice Quiz",
            "status": "Open",
            "model": "Adaptive",
            "attempts": "Unlimited"
          }
        }
    }
}}
<div class="catscales-dashboard">
    <div class="container px-0">
        <div class="row">
            {{#detailview}}
                {{#detailcard}}
                <div class="card mr-2 col-4">
                    <div class="card-header">
                        {{title}}
                    </div>
                    <div class="card-body">
                    {{#body}}
                    <div>{{#str}}id, local_catquiz{{/str}}: {{id}}</div>
                    <div>{{#str}}type, local_catquiz{{/str}}: {{type}}</div>
                    <div>{{#str}}status, core{{/str}}: {{{eye}}} {{{statuscircle}}} {{status}}</div>
                    <div>{{#str}}model, local_catquiz{{/str}}: {{model}}</div>
                    <div>{{#str}}attempts, local_catquiz{{/str}}: {{attempts}}</div>
                    {{/body}}
                    </div>
                </div>
                {{/detailcard}}
                {{#questionpreview}}
                <div class="card col-7">
                    <div class="card-header">
                        {{title}}
                    </div>
                    <div class="card-body">
                    {{#body}}
                        {{{question}}}
                    {{/body}}
                    </div>
                </div>
                {{/questionpreview}}
            {{/detailview}}
        </div>
    </div>
</div>