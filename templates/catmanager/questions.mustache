{{!
    @template local_catquiz
    Template which defines a catquiz summary.
    Classes required for JS:
    * none
    Data attributes required for JS:
    * none
    Context variables required for this template:
    Example context (json):
    {
    }
}}

{{#questiontab}}
    <div class="catscales-dashboard grid">
        <div id="catmanagerquestions contextselector">
            {{{contextselector}}}
        </div>
    </div>
    <div class="catscales-dashboard grid">
        <div id="catmanagerquestions scaleselector">
            {{{scaleselector}}}
        </div>
        <div id="catmanagerquestions subscaleselector">
            {{{subscaleselector}}}
        </div>
        {{#checkbox}}
            <div class="form-check">
                <input type="checkbox" class="integrate-subscales-checkbox" id="integrateSubscaleQuestionsCheckbox" {{checked}}>
                <label class="integrate-subscales-checkbox" for="integrateSubscaleQuestionsCheckbox">{{label}}</label>
            </div>
        {{/checkbox}}
    </div>
    <div>
        {{#table}}
            {{{table}}}
        {{/table}}
        {{^table}}
            <h5>{{#str}} nocatscale, local_catquiz {{/str}}</h5>
        {{/table}}
    </div>
{{/questiontab}}

{{#js}}
    require(['local_catquiz/manage_catscale_questions'], function(init) {
        init.init();
    });
{{/js}}