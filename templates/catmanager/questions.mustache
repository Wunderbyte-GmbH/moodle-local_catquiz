{{!
    @template local_catquiz
    Template which defines a catquiz summary.
    Classes required for JS:
    * none
    Data attributes required for JS:
    * none
    Context variables required for this template:
    Example context (json):
    {
    }
}}

{{#questionsdisplay}}
    <div class="catscales-dashboard grid">
        <div id="catmanagerquestions scaleselector">
            {{{scaleselector}}}
        </div>
        <div id="catmanagerquestions subscaleselector">
            {{{subscaleselector}}}
        </div>
        {{#checkbox}}
            <div class="form-check">
                <input type="checkbox" class="integrate-subscales-checkbox" id="integrateSubscaleQuestionsCheckbox" {{checked}}>
                <label class="integrate-subscales-checkbox" for="integrateSubscaleQuestionsCheckbox">{{label}}</label>
            </div>
        {{/checkbox}}
    </div>
    <div>
        {{#table}}
            <div class="float-right" id="catmanagerquestions contextselector">
                    {{{contextselector}}}
            </div>
                </br>
                </br>
            <div>
                {{{table}}}
            </div>
        {{/table}}
        {{#detailview}}
        <div>
            {{#detailcardoutput}}
            <div id="testitemdetails">
                {{>local_catquiz/catmanager/questiondetailscard}}
            </div>
            {{/detailcardoutput}}
            <div id="questionspreview">
            </div>
        </div>
        <div>
            {{#modelcards}}
            <div id="models">
              {{>local_catquiz/tabs/tab_models}}
            </div>
            {{/modelcards}}
        </div>
        {{/detailview}}
    </div>
{{/questionsdisplay}}

{{#js}}
    require(['local_catquiz/manage_catscale_questions'], function(init) {
        init.init();
    });
    require(['local_catquiz/testitem_model_overrides'], function(init) {
        init.init();
    });
{{/js}}