{{!
    @template local_catquiz
    Template which defines a entities view page.
    Classes required for JS:
    * none
    Data attributes required for JS:
    * none
    Context variables required for this template:
    Example context (json):
    {
        "id": 3,
        "parentid": 1,
        "description": "xyz",
        "name": "Mathematics3",
        "subscribed" : true,
        "viewlink":"http://localhost:8000/local/catquiz/manage_catscales.php?id=3#lcq_questions"
    }
}}

<ul class="pt-2 mt-0 mb-0">
        <li class="list-group-item pr-0" data-id="{{id}}" data-description="{{description}}" data-parentid="{{parentid}}" data-name="{{name}}"
        data-scaleid="{{id}}">
            <div class="pull-right">
                <a data-action="view" href="#" class="manage-catscale btn btn--plain btn--smaller btn-catscales" data-scaleid="{{id}}">
                    <i class="fa fa-edit disabled"></i>
                    {{#str}} view, moodle {{/str}}</a>
                <a data-action="edit" href="#" class="manage-catscale btn btn--plain btn--smaller btn-catscales">
                    <i class="fa fa-edit"></i>
                    {{#str}} edit, moodle {{/str}}</a>
                <a data-action="delete" href="#" class="manage-catscale btn btn--plain btn--smaller btn-catscales">
                    <i class="fa fa fa-trash"></i>
                    {{#str}} delete, moodle {{/str}}</a>
                <a data-action="create" href="#" class="manage-catscale btn btn--plain btn--smaller btn-catscales">
                    <i class="fa fa fa-plus"></i>
                    {{#str}} create, moodle {{/str}}</a>
                {{>local_catquiz/buttons/button_subscribe}}
            </div>
            <h5 class="h5">{{name}}</h5>
            <div>{{description}}</div>
        </li>
        {{#children}}
            {{>local_catquiz/catscalechildren}}
        {{/children}}
</ul>
