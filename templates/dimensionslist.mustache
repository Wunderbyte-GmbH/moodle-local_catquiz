{{!
    @template local_catquiz
    Template which defines a dimensions view page.
    Classes required for JS:
    * none
    Data attributes required for JS:
    * none
    Context variables required for this template:
    Example context (json):
    {

    }
}}
<div>
{{#itemtree}}
        <div id="local-dimensions-container-{{id}}">
            <ul class="list-group w-100 mt-2">
                <li class="list-group-item" data-id="{{id}}" data-description="{{description}}" data-parentid="{{parentid}}" data-name="{{name}}">
                    <div class="pull-right">
                        <a href="#" class="view-dimension btn btn--plain btn--smaller btn-dimensions" data-action="view">
                            <i class="fa fa-edit"></i>
                            {{#str}} view, moodle {{/str}}</a>
                        <a href="#" class="manage-dimension btn btn--plain btn--smaller btn-dimensions" data-action="edit">
                            <i class="fa fa-edit"></i>
                            {{#str}} edit, moodle {{/str}}</a>
                        <a href="#" class="delete-dimension btn btn--plain btn--smaller btn-dimensions"  data-action="delete">
                            <i class="fa fa fa-trash"></i>
                            {{#str}} delete, moodle {{/str}}</a>
                        <a href="#" class="manage-dimension btn btn--plain btn--smaller btn-dimensions" data-action="create">
                            <i class="fa fa fa-plus"></i>
                            {{#str}} create, moodle {{/str}}</a>
                        {{>local_catquiz/button_subscribe}}
                    </div>
                    <h4 class="h4">{{name}}</h4>
                    <div>{{description}}</div>
                </li>
        </ul>
        </div>
    {{#children}}
        {{>local_catquiz/dimensionchildren}}
    {{/children}}
{{/itemtree}}
{{^itemtree}}
<ul class="list-group w-100">
    <li class="list-group-item">
        <span class="h4">{{#str}} createdimension, local_catquiz {{/str}}</span>
        <div>
            <a href="#" class="manage-dimension btn-primary btn btn--plain btn--smaller btn-dimensions" data-action="create">
                <i class="fa fa fa-plus px-2"></i>
                {{#str}} create, moodle {{/str}}
            </a>
        </div>
    </li>
</ul>
{{/itemtree}}
</div>
{{#js}}
    require(['local_catquiz/manage_dimension'], function(managedimension) {
    managedimension.init();
    });
{{/js}}
