{{!
    @template local_catquiz
    Template which defines a quiz attempt feedback.
    Classes required for JS:
    * none
    Data attributes required for JS:
    * none
    Context variables required for this template:
    Example context (json):
    {
        "abilities": [
            {
                "ability": 1.23,
                "name": "Mathematics"
            },
            {
                "ability": 3.21,
                "name": "catscale2"
            }
        ],
        "chartdisplay": [
            {
                "charttitle": "Person ability relative to parentscale",
                "chart": <HTML Code>
            }
        ],
        "standarderrorpersubscales" : "50"
    }
}}
<h5>{{#str}}personabilitytitle, local_catquiz{{/str}}</h5>
{{#abilities}}
    {{name}}: {{ability}}
    <button type="button" class="btn btn-light" data-toggle="modal" data-target=".catquizfeedbackabilitiesplayedquestions{{name}}">{{numberofitemsplayed}} {{#str}}itemsplayed, local_catquiz{{/str}}</button>

    <div class="modal fade bd-example-modal-xl catquizfeedbackabilitiesplayedquestions{{name}}" tabindex="-1" role="dialog" aria-labelledby="catquizfeedbackabilitiesplayedquestions" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            {{#questionpreviews}}
                <br> {{{preview}}} <br>
            {{/questionpreviews}}
        </div>
    </div>
    </div>
    <br>
{{/abilities}}
<h5>{{#str}}standarderrorpersubscale, local_catquiz{{/str}}: {{standarderrorpersubscales}}</h5>
{{#chartdisplay}}
    <h5>
    {{charttitle}}
    </h5>
    {{{chart}}}
{{/chartdisplay}}