{{!
    @template local_catquiz
    Template which defines a quiz attempt feedback.
    Classes required for JS:
    * none
    Data attributes required for JS:
    * none
    Context variables required for this template:
    Example context (json):
    {
{
    "abilities": [
        {
            "ability": 1.23,
            "name": "Mathematics",
            "isselectedscale": 1,
            "catscaleid": 3,
            "numberofitemsplayed": [
                {
                    "noplayed": "0"
                }
            ],
            "questionpreviews": [
                {
                    "preview": "<div>...</div>"
                },
                {
                    "preview": "<div>...</div>"
                }
            ]
        },
        {
            "ability": 3.21,
            "name": "catscale2",
            "isselectedscale": 0,
            "catscaleid": 3,
            "numberofitemsplayed": [
                {
                    "itemsplayed": "3"
                }
            ],
            "questionpreviews": [
                {
                    "preview": "<div>...</div>"
                },
                {
                    "preview": "<div>...</div>"
                }
            ]
        }
    ],
    "chartdisplay": [
        {
            "charttitle": "Person ability relative to parentscale",
            "chart": "<div>...</div>"
        }
    ],
    "standarderrorpersubscales": "50"
}
}
}}
<h5>{{#str}}personabilitytitle, local_catquiz{{/str}}</h5>
<div class="container">
    {{#abilities}}
    <div class="row">
    {{#numberofitemsplayed}}
        <div {{#isselectedscale}}
                class="font-weight-bold col-6 text-right"
                data-toggle="tooltip"
                data-placement="top"
                title="{{tooltiptitle}}"
            {{/isselectedscale}}
            {{^isselectedscale}}
                class="font-weight-normal col-6 text-right"
            {{/isselectedscale}}>
            {{name}} :
        </div>
        <div {{#isselectedscale}}
                class="font-weight-bold col-2 text-left"
                data-toggle="tooltip"
                data-placement="top"
                title="{{tooltiptitle}}"
            {{/isselectedscale}}
            {{^isselectedscale}}
                class="font-weight-normal col-2 text-left"
            {{/isselectedscale}}>
            {{ability}}
        </div>
        {{#itemsplayed}}
            <div class="btn btn-light btn-sm col" data-toggle="modal" data-target=".catquizfeedbackabilitiesplayedquestions_{{catscaleid}}">
                {{itemsplayed}} {{#str}}itemsplayed, local_catquiz{{/str}}
            </div>
        {{/itemsplayed}}
        {{^itemsplayed}}
            <div class="btn btn-light btn-sm col">
                {{noplayed}} {{#str}}itemsplayed, local_catquiz{{/str}}
            </div>
        {{/itemsplayed}}
        {{/numberofitemsplayed}}
        <div class="modal fade bd-example-modal-xl catquizfeedbackabilitiesplayedquestions_{{catscaleid}}" tabindex="-1" role="dialog" aria-labelledby="catquizfeedbackabilitiesplayedquestions_{{catscaleid}}" aria-hidden="true">
        <div class="modal-dialog modal-xl">
            <div class="modal-content">
                {{#questionpreviews}}
                    <br> {{{preview}}} <br>
                {{/questionpreviews}}
            </div>
        </div>
        </div>
    </div>
    {{/abilities}}
</div>
<h5>{{#str}}standarderrorpersubscale, local_catquiz{{/str}}: {{standarderrorpersubscales}}</h5>
{{#chartdisplay}}
    <h5>
    {{charttitle}}
    </h5>
    {{{chart}}}
{{/chartdisplay}}