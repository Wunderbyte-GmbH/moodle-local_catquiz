{{!
    @template local_catquiz
    Template which defines a quiz attempt feedback.
    Classes required for JS:
    * none
    Data attributes required for JS:
    * none
    Context variables required for this template:
    Example context (json):
    {
        "abilities": [
            {
                "ability": 1.23,
                "standarderror": 3.21,
                "name": "Mathematics",
                "isselectedscale": 1,
                "catscaleid": 3,
                "numberofitemsplayed": [
                    {
                        "noplayed": "0"
                    }
                ]
            },
            {
                "ability": 3.21,
                "standarderror": 1.23,
                "name": "catscale2",
                "isselectedscale": 0,
                "catscaleid": 3,
                "numberofitemsplayed": [
                    {
                        "itemsplayed": "3"
                    }
                ]
            }
        ],
        "chartdisplay": [
            {
                "charttitle": "Person ability relative to parentscale",
                "chart": "<div>...</div>"
            }
        ]
    }
}}
<p>{{{ feedback_details_description }}}</p>
{{#scale_info}}
    <p>{{{scale_info}}}</p>
{{/scale_info}}
<h6>{{#str}}personabilitytitle, local_catquiz{{/str}}</h6>
<div class="container">
    {{#abilities}}
    <div class="row">
        <div {{#isselectedscale}}
                class="font-weight-bold col-4 text-right"
                data-toggle="tooltip"
                data-placement="top"
                title="{{tooltiptitle}}"
            {{/isselectedscale}}
            {{^isselectedscale}}
                class="font-weight-normal col-4 text-right"
            {{/isselectedscale}}>
            {{name}} :
        </div>
        <div {{#isselectedscale}}
                class="font-weight-bold col-4 text-left"
                data-toggle="tooltip"
                data-placement="top"
                title="{{tooltiptitle}}"
            {{/isselectedscale}}
            {{^isselectedscale}}
                class="font-weight-normal col-4 text-left"
            {{/isselectedscale}}>
            {{ability}} ({{#str}}standarderror, local_catquiz{{/str}}: {{standarderror}})
        </div>
        {{#numberofitemsplayed}}
        {{#itemsplayed}}
            <span>
                {{itemsplayed}} {{#str}}itemsplayed, local_catquiz{{/str}}
            </span>
        {{/itemsplayed}}
        {{/numberofitemsplayed}}
    </div>
    {{/abilities}}
</div>
{{#chartdisplay}}
    <h6>
    {{charttitle}}
    </h6>
    {{{chart}}}
{{/chartdisplay}}
