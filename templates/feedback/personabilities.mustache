{{!
    @template local_catquiz
    Template which defines a quiz attempt feedback.
    Classes required for JS:
    * none
    Data attributes required for JS:
    * none
    Context variables required for this template:
    Example context (json):
    {
        "abilities": [
            {
                "ability": 1.23,
                "name": "Mathematics",
                "isselectedscale": 1,
                "catscaleid": 3,
                "numberofitemsplayed":[
                    "noplayed": "0"
                ],
                "questionpreviews": [
                    {
                        "preview": "<div>...</div>",
                        "preview": "<div>...</div>"
                    }
                ]
            },
            {
                "ability": 3.21,
                "name": "catscale2",
                "isselectedscale": 0,
                "catscaleid": 3,
                "numberofitemsplayed": [
                    "itemsplayed": "3"
                ],
                "questionpreviews": [
                    {
                        "preview": "<div>...</div>",
                        "preview": "<div>...</div>"
                    }
                ]
            }
        ],
        "chartdisplay": [
            {
                "charttitle": "Person ability relative to parentscale",
                "chart": "<div>...</div>"
            }
        ],
        "standarderrorpersubscales" : "50"
    }
}}
<h5>{{#str}}personabilitytitle, local_catquiz{{/str}}</h5>
{{#abilities}}
    <span {{#isselectedscale}} class="font-weight-bold" data-toggle="tooltip" data-placement="top" title="{{tooltiptitle}}" {{/isselectedscale}}
        {{^isselectedscale}} class="font-weight-normal" {{/isselectedscale}}>
        {{name}}: {{ability}}
    </span>
    {{#numberofitemsplayed}}
        {{#itemsplayed}}
            <div class="btn btn-light" data-toggle="modal" data-target=".catquizfeedbackabilitiesplayedquestions_{{catscaleid}}">
                {{itemsplayed}} {{#str}}itemsplayed, local_catquiz{{/str}}
            </div>
        {{/itemsplayed}}
        {{^itemsplayed}}
            <span> {{noplayed}} {{#str}}itemsplayed, local_catquiz{{/str}} </span>
        {{/itemsplayed}}
    {{/numberofitemsplayed}}
    <div class="modal fade bd-example-modal-xl catquizfeedbackabilitiesplayedquestions_{{catscaleid}}" tabindex="-1" role="dialog" aria-labelledby="catquizfeedbackabilitiesplayedquestions_{{catscaleid}}" aria-hidden="true">
    <div class="modal-dialog modal-xl">
        <div class="modal-content">
            {{#questionpreviews}}
                <br> {{{preview}}} <br>
            {{/questionpreviews}}
        </div>
    </div>
    </div>
    <br>
{{/abilities}}
<h5>{{#str}}standarderrorpersubscale, local_catquiz{{/str}}: {{standarderrorpersubscales}}</h5>
{{#chartdisplay}}
    <h5>
    {{charttitle}}
    </h5>
    {{{chart}}}
{{/chartdisplay}}