{{!
    @template local_catquiz
    Template which defines a quiz attempt feedback.
    Classes required for JS:
    * none
    Data attributes required for JS:
    * none
    Context variables required for this template:
    Example context (json):
    {
        "userid": 2,
        "attemptid": 3,
        "questionsattempted": 3,
        "timestamp": 123456,
        "contextid": 1,
        "catscale": "Deutsch",
        "teststrategy": "Infer lowest subscale",
        "personabilities": {"scale1": 0.5, "scale2": 1.2},
        "questions": [{"id": 1, "score": 0.3}, {"id": 2, "score": 0.01}],
        "active_scales": ["scale1", "scale2", "scale3"],
        "lastquestion": {"id": 1, "score": 1.2},
        "selectedscale": "Deutsch"
    }
}}
<p>{{description}}</p>

<div style="text-align: center;">
    {{#isteacher}}
    <!--
    <a class="btn btn-info" href="{{{cfg->root}}}/local/catquiz/export_feedback_csv.php?attemptid={{{attemptid}}}&cid={{{cid}}}">
        Export Attempt CSV
    </a>
    -->
    <a class="btn btn-info" download="CATQuiz-Export-Attempt{{{attemptid}}}.csv"
    id="download-link" href="data:text/csv;charset=utf-8,{{{data}}}"
    target="_blank">Export Attempt CSV
    </a>
    {{/isteacher}}
    {{#iscatmanager}}
    <a class="btn btn-secondary" href="{{{cfg->root}}}/local/catquiz/export_debuginfo_pdf.php?attemptid={{{attemptid}}}&cid={{{cid}}}">
        Export Debug Info PDF
    </a>
    <a class="btn btn-secondary" download="Debug_Info_Raw_{{{attemptid}}}.html"
    id="download-link" href="data:text/html;charset=utf-8,{{{debuginfo_raw}}}"
    target="_blank">View Raw Debug Info
    </a>
    {{/iscatmanager}}
</div>