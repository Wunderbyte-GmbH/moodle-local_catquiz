{{!
    @template local_catquiz
    Template which defines a catscales view page.
    Classes required for JS:
    * none
    Data attributes required for JS:
    * none
    Context variables required for this template:
    Example context (json):
    {
        "catscalemanagers": [
            {
                "firstname": "Maxima",
                "firstname": "Yoga",
                "email": "maxima@yoga.at"
            }
        ]
    }
}}

<ul class="list-group">
{{#catscalemanagers}}
     <li class="list-group-item list-group-item-action">
        <div>
            <h5 class="mb-1">
                {{firstname}} {{lastname}}
            </h5>
        </div>
        <p class="mb-1">{{email}}</p>
    </li>
{{/catscalemanagers}}
</ul>
