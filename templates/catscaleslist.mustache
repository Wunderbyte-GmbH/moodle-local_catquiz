{{!
    @template local_catquiz
    Template which defines a catscales view page.
    Classes required for JS:
    * none
    Data attributes required for JS:
    * none
    Context variables required for this template:
    Example context (json):
    {
        "itemtree": [
            {
                "id": 1,
                "parentid": 0,
                "description": "xyz",
                "name": "Mathematics",
                "minscalevalue": 0,
                "maxscalevalue": 0,
                "timecreated": 1691778904,
                "timemodified": 1691778904,
                "subscribed" : true,
                "viewlink": "http://localhost:8000/local/catquiz/manage_catscales.php?id=1#lcq_questions",
                "numberofchildren": 0,
                "numberofquestions": 0
            }
        ],
        "js": true
    }
}}
<div>
<ul class="list-group w-100">
    <li class="list-group-item">
        <span class="h4">{{#str}} createcatscale, local_catquiz {{/str}}</span>
        <div>
            <a href="#" class="mt-3 manage-catscale btn-primary btn btn--plain btn--smaller btn-catscales" data-action="create">
                <i class="fa fa fa-plus px-2"></i>
                {{#str}} create, moodle {{/str}}
            </a>
        </div>
    </li>
</ul>
{{#itemtree}}
        <div id="local-catscales-container-{{id}}">
            <ul class="list-group w-100 mt-2">
                <li class="list-group-item" data-id="{{id}}" data-description="{{description}}" data-parentid="{{parentid}}" data-name="{{name}}"
                data-scaleid="{{id}}">
                    <div class="pull-right">
                        <a href="#" class="manage-catscale btn btn--plain btn--smaller btn-catscales" data-action="view" data-scaleid="{{id}}">
                            <i class="fa fa-edit disabled"></i>
                            {{#str}} view, moodle {{/str}} </a>
                        <a href="#" class="manage-catscale btn btn--plain btn--smaller btn-catscales" data-action="edit">
                            <i class="fa fa-edit"></i>
                            {{#str}} edit, moodle {{/str}}</a>
                        <a href="#" class="manage-catscale btn btn--plain btn--smaller btn-catscales" data-action="delete">
                            <i class="fa fa fa-trash"></i>
                            {{#str}} delete, moodle {{/str}}</a>
                        <a href="#" class="manage-catscale btn btn--plain btn--smaller btn-catscales" data-action="create">
                            <i class="fa fa fa-plus"></i>
                            {{#str}} create, moodle {{/str}}</a>
                        {{>local_catquiz/buttons/button_subscribe}}
                    </div>
                    <h4 class="h4">{{name}}</h4>
                    <div>{{description}}</div>
                </li>
        </ul>
        </div>
    {{#children}}
        {{>local_catquiz/catscalechildren}}
    {{/children}}
{{/itemtree}}
</div>
{{#js}}
    require(['local_catquiz/managecatscale'], function(managecatscale) {
    managecatscale.init();
    });
{{/js}}
