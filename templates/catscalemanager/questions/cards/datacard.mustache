{{!
    @template local_catquiz
    Template which defines a catquiz view page.
    Classes required for JS:
    * none
    Data attributes required for JS:
    * none
    Context variables required for this template:
    Example context (json):
    {
        "datacard": {
            "title": "Quiz Details",
            "body": {
                "id": "12345",
                "type": "Practice Quiz",
                "closedeye": "slash" | "",
                "statuscircle": "success",
                "status":  "(inactive, manually confirmed)" ,
                "model": "Adaptive",
                "attempts": "Unlimited"
            }
    }
}}
    <div class="card mr-2 col-4">
        <div class="card-header">
            {{title}}
        </div>
        <div class="card-body">
        {{#body}}
        <div>{{#str}}id, local_catquiz{{/str}}: {{id}}</div>
        <div>{{#str}}type, local_catquiz{{/str}}: {{type}}</div>
        <div class="testitem-togglestatus"
            data-templatename="catcmanager/testitemdashboard">
            {{#str}}status, core{{/str}}: <i class='fa fa-eye{{closedeye}}' id="testitem-status-activity-eye"></i> <i class='fa fa-circle {{statuscircle}}' id="testitem-status-circle"></i>{{status}}
        </div>
        <div>{{#str}}model, local_catquiz{{/str}}: {{model}}</div>
        <div>{{#str}}attempts, local_catquiz{{/str}}: {{attempts}}</div>
        {{/body}}
        </div>
    </div>

    {{#js}}
        require(['local_catquiz/testitemdashboard/togglestatus'], function(init) {
            init.init({{testitemid}}, {{scaleid}}, {{contextid}}, '{{component}}');
        });
    {{/js}}
