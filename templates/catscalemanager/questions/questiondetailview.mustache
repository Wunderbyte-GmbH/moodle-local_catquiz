{{!
    @template local_catquiz
    Template which defines a catquiz view page.
    Classes required for JS:
    * none
    Data attributes required for JS:
    * none
    Context variables required for this template:
    Example context (json):
    {
        "questiondetailview": {
            "datacard": {
                "title": "General",
                "body": {
                    "id": "12345",
                    "type": "Practice Quiz",
                    "closedeye": "-slash",
                    "statuscircle": "success",
                    "status":  "(inactive, manually confirmed)" ,
                    "model": "Adaptive",
                    "attempts": "Unlimited",
                    "testitemid": "0",
                    "contextid": "0",
                    "component": "question",
                    "scaleid": "1"
                }
            },
            "questionpreview": {
                "title": "Question preview",
                "body": {
                    "question": "<p>This is the question content.</p>"
                }
            }
        }
    }
}}
<div class="catscales-dashboard">
    <div class="container px-0">
        <div class="row">
            {{#questiondetailview}}
                {{#datacard}}
                    {{>local_catquiz/catscalemanager/questions/cards/datacard}}
                {{/datacard}}
                {{#questionpreview}}
                    {{>local_catquiz/catscalemanager/questions/cards/questionpreview}}
                {{/questionpreview}}
            {{/questiondetailview}}
        </div>
    </div>
</div>