{{!
    @template local_catquiz
    Template which defines a catquiz summary.
    Classes required for JS:
    * none
    Data attributes required for JS:
    * none
    Context variables required for this template:
    Example context (json):
    {
        "questionsdisplay": {
            "notable": false, // Set to true if you don't want the button and modal
            "modaltable": "<p>Your modal content here</p>", // Provide HTML content for the modal
            "table": "<table><tr><td>Table content</td></tr></table>", // Provide HTML content for the table
        }
    }
}}

{{#questionsdisplay}}
    {{>local_catquiz/catscalemanager/scaleandcontextselector}}
    <div>
        {{^notable}}
            <button type="button" class="btn btn-primary" data-toggle="modal" data-target=".bd-example-modal-xl">{{#str}}addtestitemtitle, local_catquiz{{/str}}</button>
            <div class="modal fade bd-example-modal-xl" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true">
                <div class="modal-dialog modal-xl">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title">{{#str}}addtestitemtitle, local_catquiz{{/str}}</h5>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <div class="modal-body">
                            <div>{{{modaltable}}}</div>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-dismiss="modal">{{#str}}close, local_catquiz{{/str}}</button>
                        </div>
                    </div>
                </div>
            </div>
        {{/notable}}
        {{#table}}
            <div>
                {{{table}}}
            </div>
        {{/table}}
        <div id="testitemdashboard">
            {{>local_catquiz/catscalemanager/questions/testitemdashboard}}
        </div>
    </div>
{{/questionsdisplay}}