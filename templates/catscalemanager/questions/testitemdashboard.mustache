{{!
    @template local_catquiz
    Template which defines a catquiz summary.
    Classes required for JS:
    * none
    Data attributes required for JS:
    * none
    Context variables required for this template:
    Example context (json):
    {
        "testitemdashboard": {
            "backtotablelink": {
                "class": "btn-primary",
                "type": "button",
                "label": "Back to Table"
            },
            "overridesforms": "Overrides Forms HTML",
            "itemstatus": "Item Status",
            "models": [
              {
                "title": "model name",
                "body": "<div>rendered model stats</div>"
              }
            ]
        }
    }
}}

{{#testitemdashboard}}
    {{#backtotablelink}}
        <button id="backtotablelink" class='btn {{class}}' type={{type}}>{{label}}</button>
    {{/backtotablelink}}
    <div id="questiondetailview">
        {{>local_catquiz/catscalemanager/questions/questiondetailview}}
    </div>
    <div>
        <div id="models">
        {{>local_catquiz/tabs/tab_models}}
        </div>
    </div>
    <div id="statistics">
        {{>local_catquiz/tabs/tab_testitemstats}}
    </div>
{{/testitemdashboard}}

{{#js}}
    require(['local_catquiz/testitemdashboard/backbutton'], function(init) {
        init.init();
    });
{{/js}}