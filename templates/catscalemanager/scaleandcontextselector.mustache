{{!
    @template local_catquiz
    Template which defines a catquiz summary.
    Classes required for JS:
    * none
    Data attributes required for JS:
    * none
    Context variables required for this template:
    Example context (json):
    {
        "scaleselectors": "HTML Content for Scale Selectors",
        "checkbox": {
            "checked": "checked",
            "label": "Integrate Subscale Questions"
        },
        "contextselector": "HTML Content for Context Selector"
    }
}}

<div class="catscales-dashboard grid">
    <div id="catmanagerquestions-scaleselectors">
            {{{scaleselectors}}}
    </div>
    {{#checkbox}}
        <div class="form-check">
            <input type="checkbox" class="integrate-subscales-checkbox" id="integrateSubscaleQuestionsCheckbox" {{checked}}>
            <label class="integrate-subscales-checkbox" for="integrateSubscaleQuestionsCheckbox">{{label}}</label>
        </div>
    {{/checkbox}}
    <div id="catmanagerquestions-contextselector" class="float-right" >
        {{{contextselector}}}
    </div>
</div>