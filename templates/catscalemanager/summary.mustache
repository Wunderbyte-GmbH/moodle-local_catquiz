{{!
    @template local_catquiz
    Template which defines a catquiz summary.
    Classes required for JS:
    * none
    Data attributes required for JS:
    * none
    Context variables required for this template:
    Example context (json):
    {
      "catscalestats": {
        "num_assigned_catscales": 5,
        "num_assigned_tests": 3,
        "num_assigned_questions": 50,
        "last_calculated": "2023-05-20"
      },
      "itemtree": [
        {
          "subscribed": true,
          "image": "path_to_image1.jpg",
          "name": "Category Scale 1",
          "viewlink": "https://example.com/category_scale_1",
          "numberofchildren": 3,
          "numberofquestions": 20
        },
        {
          "subscribed": true,
          "image": "path_to_image2.jpg",
          "name": "Category Scale 2",
          "viewlink": "https://example.com/category_scale_2",
          "numberofchildren": 2,
          "numberofquestions": 15
        }
      ]
    }
}}

<div>
  {{#catscalestats}}
    <h3>{{#str}} summarygeneral, local_catquiz {{/str}}</h3>
    <div class="catmanager-summary grid">
      <div>{{#str}} summarynumberofassignedcatscales, local_catquiz {{/str}}: {{num_assigned_catscales}}</div>
      <div>{{#str}} summarynumberoftests, local_catquiz {{/str}}: {{num_assigned_tests}}</div>
      <div>{{#str}} summarytotalnumberofquestions, local_catquiz {{/str}}: {{num_assigned_questions}}</div>
      <div>{{#str}} summarylastcalculation, local_catquiz {{/str}}: {{last_calculated}}</div>
    </div>
  {{/catscalestats}}
</div>
<div>
  <h3>{{#str}} subscribedcatscalesheading, local_catquiz {{/str}}</h3>
  <div class="card-deck dashboard-card-deck">
  {{#itemtree}}
    {{#subscribed}}
    <div class="card dashboard-card">
        <div class="card-img dashboard-card-img" style='background-image: url("{{{image}}}");'>
            <span class="sr-only">{{#str}}aria:catscaleimage, local_catquiz{{/str}}</span>
        </div>
        <div class="card-body">
          <h3><a href="{{viewlink}}">{{name}}</a></h3>
          <div>{{#str}}healthstatus, local_catquiz{{/str}}: </div>
          <div>{{#str}}catmanagernumberofsubscales, local_catquiz{{/str}}: {{numberofchildren}}</div>
          <div>{{#str}}catmanagernumberofquestions, local_catquiz{{/str}}: {{numberofquestions}}</div>
        </div>
    </div>
    {{/subscribed}}
  {{/itemtree}}
  </div>
</div>

<div class="last-edits">
  <h3>{{#str}} recentevents, local_catquiz{{/str}}</h3>
  {{{eventlogtable}}}
</div>