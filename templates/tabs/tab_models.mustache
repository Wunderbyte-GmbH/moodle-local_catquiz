{{!
    @template local_catquiz
    Template which defines a catquiz view page.
    Classes required for JS:
    * none
    Data attributes required for JS:
    * none
    Context variables required for this template:
    Example context (json):
    {
      "overridesforms": "Overrides Forms HTML",
      "itemstatus": "Item Status",
      "models": [
        {
          "title": "model name",
          "body": "<div>rendered model stats</div>"
        }
      ]
    }
}}

<div class="catscales-dashboard grid">
  <div class="card tab-model-overridesform">
    <div class="card-header">
      {{#str}} settings, core {{/str}}
    </div>
    <div class="card-body">
      {{{overridesforms}}}
    </div>
  </div>
  {{#models}}
    <div class="card likelihood">
        <div class="card-header">
            {{title}}
            <a href="javascript:void(0);" onclick="window.location.reload();"> <i class="fa fa-refresh float-right"></i> </a>
        </div>
        <div class="card-body">
          {{{heading}}}
          {{status}}
          {{{chart}}}
        </div>
    </div>
  {{/models}}
</div>
