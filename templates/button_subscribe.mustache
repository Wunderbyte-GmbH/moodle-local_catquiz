{{!
    @template local_catquiz/button_subscribe

    Classes required for JS:
    * none

    Data attributes required for JS:
    * data-region

     Example context (json):
    {
        'id' : '1',
        'area' : 'area',
    }
}}

<div class="btn btn-primary catquiz-button-subscribe"
    data-id="{{id}}"
    data-area="{{area}}">
    {{#subscribed}}
        {{#str}} subscribed, local_catquiz {{/str}}
    {{/subscribed}}
    {{^subscribed}}
        {{#str}} subscribe, local_catquiz {{/str}}
    {{/subscribed}}
</div>

{{#js}}
    require(['local_catquiz/subscribe'], function(init) {
        init.init('{{id}}', '{{area}}');
        });
{{/js}}